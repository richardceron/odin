<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Production</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
    
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <filter>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <filter-class>
            org.primefaces.webapp.filter.FileUploadFilter
        </filter-class>
        <init-param>
            <param-name>thresholdSize</param-name>
            <param-value>51200</param-value>
        </init-param>        
    </filter>

    <filter-mapping>
        <filter-name>PrimeFaces FileUpload Filter</filter-name>
        <servlet-name>Faces Servlet</servlet-name>
    </filter-mapping>
    
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/cp/index.xhtml</welcome-file>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    
    <error-page>        
        <error-code>403</error-code>
        <location>/faces/errors/403.xhtml</location>
    </error-page>
    
    <error-page>        
        <error-code>404</error-code>
        <location>/faces/errors/403.xhtml</location>
    </error-page>
    
    <error-page>        
        <error-code>405</error-code>
        <location>/faces/errors/403.xhtml</location>
    </error-page>
    
    <security-constraint>
        <display-name>Panel de control</display-name>
        <web-resource-collection>
            <web-resource-name>Panel de control</web-resource-name>
            <description></description>                        
            <url-pattern>/faces/cp/*</url-pattern>            
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>usuario_general</role-name>      
        </auth-constraint>        
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    
    <security-constraint>
        <display-name>Admin CP</display-name>
        <web-resource-collection>
            <web-resource-name>Admin CP</web-resource-name>
            <description></description>                        
            <url-pattern>/faces/cp/admin_agencias/*</url-pattern>
            <url-pattern>/faces/cp/admin_autos/*</url-pattern>
            <url-pattern>/faces/cp/admin_usuarios/*</url-pattern>            
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>       
        </auth-constraint>        
        <user-data-constraint>
            <transport-guarantee>NONE</transport-guarantee>
        </user-data-constraint>
    </security-constraint>       
    
    <login-config>        
        <auth-method>FORM</auth-method>
        <realm-name>odinRealm</realm-name>
        <form-login-config>
            <form-login-page>/faces/cp/login.xhtml</form-login-page>
            <form-error-page>/faces/cp/login.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    
    <security-role>
        <role-name>usuario_general</role-name>
    </security-role>
    
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    
    <security-role>
        <role-name>eje_autos_nuevos</role-name>
    </security-role>
    
    <security-role>
        <role-name>admin_eje_autos_nuevos</role-name>
    </security-role>
    
    <security-role>
        <role-name>eje_servicio</role-name>
    </security-role>
    
    <security-role>
        <role-name>admin_eje_servicio</role-name>
    </security-role> 
    
    <security-role>
        <role-name>eje_prueba_manejo</role-name>
    </security-role>
    
    <security-role>
        <role-name>admin_eje_prueba_manejo</role-name>
    </security-role>       
    
    <security-role>
        <role-name>eje_refecciones</role-name>
    </security-role>
    
    <security-role>
        <role-name>admin_eje_refecciones</role-name>
    </security-role>
    
    <security-role>
        <role-name>eje_seguros</role-name>
    </security-role>
    
    <security-role>
        <role-name>admin_eje_seguros</role-name>
    </security-role>
    
    <security-role>
        <role-name>contacto_general</role-name>
    </security-role>
    
    <security-role>
        <role-name>admin_contacto_general</role-name>
    </security-role>
    
</web-app>
